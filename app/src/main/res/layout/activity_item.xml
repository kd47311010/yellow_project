<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        >
        <ImageView
            android:background="@drawable/border"
            android:id="@+id/mainImage"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/bongus" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.19"
            android:orientation="horizontal">

            <ImageView
                android:background="@drawable/border2"
                android:id="@+id/iconImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/ic_bongus" />

            <LinearLayout
                android:background="@drawable/border2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:background="@drawable/border2"
                    android:id="@+id/nameText"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:text="봉구스밥버거"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:paddingTop="10dp"
                        android:text="TEL"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tellText"
                        android:paddingTop="15dp"
                        android:text="010-1000-1000"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <ImageButton
                        android:id="@+id/callButton"
                        android:src="@mipmap/ic_calling"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuLinear"
            android:padding="10dp"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:paddingRight="5dp"
                    android:src="@drawable/menu" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:text="메뉴"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/itemLinear"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/itemName"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="\t\t햄치즈 밥버거\n\t\t봉구스 밥버거\n\t\t치즈밥버거\n\t\t쏘야밥버거\n\t\t봉순이밥버거"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="" />
                <TextView
                    android:textAlignment="center"
                    android:id="@+id/itemCost"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="2000\n1800\n2300\n1800\n2000"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/eventLinear"
            android:padding="10dp"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/event"
                    android:paddingRight="5dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:text="이벤트"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/eventContent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="\t\t2개를 사면 1개가 공짜."
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

